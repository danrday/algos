<main role="main" class="h-full">
  <div class="flex flex-col w-full h-full bg-pink-600">
    <div class="header">
      <div class="hamburger-frame <%= if @menu_open, do: "open-menu-margin bg-pink-900" %>" phx-click="toggle_hamburger">
        <div class="icon-frame test <%= if @menu_open, do: "rotate" %>">
            <icon class="hamburger-open icon <%= if @menu_open, do: "ion-close", else: "ion-navicon-round" %>" />
        </div>
      </div>
      <div class="project-title">
        <h4>d.r.d. web interface</h4>
      </div>
    </div>
    <div class="h-full">
      <div class="flex flex-row mainframe h-full">
        <div id="menu-icon-column" class="nav-menu transition-ease <%= if @menu_open, do: "w-48", else: "w-14" %>">
          <div class="nav-item">
            <div class="nav-icon-frame">
              <div class="nav-icon">
                <icon class="icon ion-ios-list-outline"/>
              </div>
            </div>
            <div class="sub-menu" phx-click="play">Tetris</div>
          </div>
          <div class="nav-item">
            <div class="nav-icon-frame">
              <div class="nav-icon">
                <icon class="icon ion-ios-book-outline"/>
              </div>
            </div>
            <div class="sub-menu">Hangman</div>
          </div>
          <div class="nav-item">
            <div class="nav-icon-frame">
              <div class="nav-icon">
                <icon class="icon ion-ios-book-outline"/>
              </div>
            </div>
            <div class="sub-menu">About/Contact</div>
          </div>
        </div>
        <div class="flex flex-row flex-auto">
          <div class="mt-3 ml-5">
           <%= @inner_content %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
